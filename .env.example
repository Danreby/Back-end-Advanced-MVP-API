# Database (app local conecta ao MySQL que está exposto em 127.0.0.1:3306)
DB_USER=seu_usuario_db
DB_PASSWORD=sua_senha_db
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nome_do_banco

DATABASE_URL=mysql+pymysql://seu_usuario_db:sua_senha_db@127.0.0.1:3306/nome_do_banco?charset=utf8mb4

# JWT / segurança
SECRET_KEY=sua_chave_secreta
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Mail (exemplo com SMTP)
MAIL_USERNAME=seu_usuario_smtp@example.com
MAIL_PASSWORD=sua_senha_ou_app_password
MAIL_FROM=seu-email@example.com
MAIL_FROM_NAME="CatGame"
MAIL_SERVER=smtp.exemplo.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# API do front-end
VITE_API_BASE=http://127.0.0.1:8000

# URL pública (dev -> http://localhost:8000)
EMAIL_CONFIRM_URL=http://localhost:8000

# GiantBomb API - chave de exemplo
GIANTBOMB_API_KEY=sua_chave_giantbomb
